		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events pbOK
	#tag Event
		Sub Pressed()
		  Dim msg As String
		  Dim fq As Integer
		  
		  fq = tfFrequency.Text.Val()
		  If fq = 0 Then Return
		  msg = tfMessage.Text.Trim()
		  fq = fq * 1000
		  If pmFrequency.SelectedRowIndex = 1 Then fq = fq * 60
		  Self.Hide()
		  
		  If cbAddCount.Value Then
		    Window1.pingCount=0
		  Else
		    Window1.pingCount=-1
		  End If
		  
		  CallingWindow.pingMessage = "AT+PSEND="+Hexify(msg)
		  If cbStartRightAway.Value Then
		    CallingWindow.ExecPing()
		  End If
		  
		  CallingWindow.pingTimer.Period=fq
		  CallingWindow.pingTimer.RunMode=Timer.RunModes.Multiple
		  CallingWindow.lbPingSetup.Text="PING every "+Format(fq\1000, "###,###")+" seconds"
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events tfFrequency
	#tag Event
		Sub TextChanged()
		  UpdatePreview()
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events pmFrequency
	#tag Event
		Sub SelectionChanged(item As DesktopMenuItem)
		  UpdatePreview()
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events Timer1
	#tag Event
		Sub Action()
		  Dim s As String
		  
		  s=tfFrequency.Text.Trim()
		  If s = "" Then
		    pbOK.Enabled=False
		  Else
		    pbOK.Enabled=True
		  End If
		  
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events cbAddCount
	#tag Event
		Sub ValueChanged()
