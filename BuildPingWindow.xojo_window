#tag WindowCode
	#tag Method, Flags = &h0
		Sub RunPingSetup(w As Window1)
		  CallingWindow=w
		  Timer1.RunMode=Timer.RunModes.Multiple
		  me.ShowModal()
		  
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub UpdatePreview()
		  Dim msg As String
		  Dim fq As Integer
		  
		  msg = tfMessage.Text.Trim()
		  If msg = "" Then
		    lbPreview.Text = "No Message"
		  Else
		    fq = tfFrequency.Text.Val()
		    If fq = 0 Then Return
		    fq = fq * 1000
		    If pmFrequency.SelectedRowIndex = 1 Then fq = fq * 60
		    If cbAddCount.Value Then
		      msg = msg + " <#>"
		    End If
		    lbPreview.Text = "The message `" + msg + "` will be sent every " + tfFrequency.Text +_
		    " " + pmFrequency.SelectedRowValue+"."
		  End If
		  
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h0
		CallingWindow As Window1
	#tag EndProperty


